<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.example.chiranjeev.fishtracker.main.MainPresenter" />

    </data>

    <LinearLayout

        style="@style/LinearLayout"
        tools:context=".main.MainActivity">


        <ImageView style="@style/AppLogo" />


        <Button
            style="@style/Button.Sign_In"
            android:onClick="@{presenter::handleSignInButtonClick}" />

        <Button
            style="@style/Button.Sign_Up"
            android:onClick="@{presenter::handleSignUpButtonClick}" />

    </LinearLayout>

</layout>